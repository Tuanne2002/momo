<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCACA"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.DatLichActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imbbackDatLich"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:src="@drawable/round_arrow_back_ios_24" />

        <TextView
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="44dp"
            android:padding="8dp"
            android:text="Đặt lịch hẹn"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/cannelDatLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỷ"
            android:textSize="24dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Chọn ngày đặt lịch"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/eddatlichdate"
        android:textSize="20dp"
        android:paddingLeft="8dp"
        android:focusable="false"
        android:paddingRight="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="#736D6D"
        android:inputType="none"
        android:drawableRight="@drawable/baseline_date_range_24"
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Chọn thời gian đặt lịch"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/eddatlichtime"
        android:textSize="20dp"
        android:paddingLeft="8dp"
        android:focusable="false"
        android:paddingRight="16dp"
        android:layout_marginLeft="8dp"
        android:textColor="#736D6D"
        android:inputType="none"
        android:drawableRight="@drawable/baseline_access_time_24"
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Mô tả về lỗi của xe"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/MotaLoied"
        android:textSize="20dp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#736D6D"
        android:hint="Thêm mô tả về lỗi của xe."
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:gravity="fill_horizontal"
        android:layout_height="150dp"
        />

    <Button
        android:id="@+id/btDatLich"
        android:layout_marginTop="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Đặt dịch vụ"
        android:background="@drawable/dodangnhap"
        android:textAllCaps="false"/>

</LinearLayout>