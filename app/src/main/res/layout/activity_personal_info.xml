<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PersonalInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="8dp">
        <ImageButton
            android:id="@+id/backTTCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_24"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:id="@+id/LuuTTCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_marginLeft="75dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#0099FF"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/hotenTTCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/phoneTTCN"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinh nhật"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <EditText
            android:focusable="false"
            android:drawableRight="@drawable/baseline_date_range_24"
            android:id="@+id/sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/sex1"
            android:focusable="false"
            android:onClick="showPopupMenu"
            android:drawableRight="@drawable/round_arrow_drop_down_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCCD hoặc CMND"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <EditText
            android:maxLength="12"
            android:id="@+id/cccd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>